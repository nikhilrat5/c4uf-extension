namespace sap.odm.product;

using { sap.odm.common.codeList } from '../common';
using { sap.odm.product.ProductTypeGroupCode } from './ProductTypeGroupCodes';

/**
 * A specific type of a product.
 */
type ProductTypeCode: association to one ProductTypeCodes;

/**
 * Type of a product, e.g. finished goods, service product.
 */
@odm.doc.SAPDelivered: true
@odm.doc.extensible: true
entity ProductTypeCodes: codeList {
  /**
   * Product type code.
   */
  key code: String(4);
  /**
   * Product type group code.
   */
  typeGroup: ProductTypeGroupCode;
};
