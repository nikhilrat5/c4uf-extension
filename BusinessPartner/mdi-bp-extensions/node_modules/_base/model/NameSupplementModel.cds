namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context NameSupplementModel {
    @BusConfign.Entity
    entity NameSupplement : BusConfigurationEntity {
        key titleKey                         : CommonTypes.NameSupplementCode;
            titleText                        : localized String(20);
            to_NameSupplementText            : Association to many NameSupplementText
                                                   on to_NameSupplementText.titleKey = titleKey;
            to_NameSupplementTextDescription : Association to one NameSupplementText
                                                   on  to_NameSupplementTextDescription.titleKey     = titleKey
                                                   and to_NameSupplementTextDescription.languageCode = SESSION_CONTEXT(
                                                       'LOCALE'
                                                   );
    //and to_NameSupplementTextDescription.languageCode = 'en';
    }

    @BusConfign.Entity
    entity NameSupplementText : BusConfigurationEntity {
        key titleKey     : CommonTypes.NameSupplementCode;
        key languageCode : LanguageTwoLetterISOCode;
            description  : String(40);
    }
};
