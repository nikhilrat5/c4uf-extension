namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context CustomerPriceGroupModel {
  @BusConfign.Entity
  entity CustomerPriceGroup : BusConfigurationEntity {
    key customerPriceGroupCode               : CommonTypes.CustomerPriceGroupCode;

        to_CustomerPriceGroupText            : Association to many CustomerPriceGroupText
                                                 on to_CustomerPriceGroupText.customerPriceGroupCode = customerPriceGroupCode;

        to_CustomerPriceGroupTextDescription : Association to one CustomerPriceGroupText
                                                 on  to_CustomerPriceGroupTextDescription.customerPriceGroupCode = customerPriceGroupCode
                                                 and to_CustomerPriceGroupTextDescription.languageCode           = SESSION_CONTEXT(
                                                   'LOCALE'
                                                 );

  }

  @BusConfign.Entity
  entity CustomerPriceGroupText : BusConfigurationEntity {
    key customerPriceGroupCode : CommonTypes.CustomerPriceGroupCode;
    key languageCode           : LanguageTwoLetterISOCode;
        shortDescription       : String(20);

  }
};
