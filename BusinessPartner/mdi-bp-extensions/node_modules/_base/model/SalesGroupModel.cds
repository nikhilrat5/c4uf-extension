namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context SalesGroupModel {
  @BusConfign.Entity
  entity SalesGroup : BusConfigurationEntity {
    key salesGroupCode               : CommonTypes.SalesGroupCode;

        to_SalesGroupTextDescription : Association to one SalesGroupText
                                         on  to_SalesGroupTextDescription.salesGroupCode = salesGroupCode
                                         and to_SalesGroupTextDescription.languageCode   = SESSION_CONTEXT(
                                           'LOCALE'
                                         );

        to_SalesGroupText            : Association to many SalesGroupText
                                         on to_SalesGroupText.salesGroupCode = salesGroupCode;


  }

  @BusConfign.Entity
  entity SalesGroupText : BusConfigurationEntity {
    key salesGroupCode   : CommonTypes.SalesGroupCode;
    key languageCode     : LanguageTwoLetterISOCode;
        shortDescription : String(20);

  }
};
