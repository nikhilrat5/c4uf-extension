namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';
using cds.foundation.sap.language.LanguageName from '@sap/reusemodel-language/db/types';

context AuthorizationGroupModel {
  @BusConfign.Entity
  entity AuthorizationGroup : BusConfigurationEntity {
    key authorizationGroup                   : String(4);
    key authorizationGroupObject             : String(10) default 'BUPA';
        IsDefault                            : Boolean default false;

        to_AuthorizationGroupText            : Association to many AuthorizationGroupText
                                                 on to_AuthorizationGroupText.authorizationGroup = authorizationGroup;


        to_AuthorizationGroupTextDescription : Association to one AuthorizationGroupText
                                                 on  to_AuthorizationGroupTextDescription.authorizationGroup = authorizationGroup
                                                 and to_AuthorizationGroupTextDescription.languageCode       = SESSION_CONTEXT(
                                                   'LOCALE'
                                                 );
  }

  @BusConfign.Entity
  entity AuthorizationGroupText : BusConfigurationEntity {
    key authorizationGroup            : String(4);
    key authorizationGroupObject      : String(10) default 'BUPA';
    key languageCode                  : LanguageTwoLetterISOCode;
        authorizationGroupDescription : LanguageName;
  }
};
