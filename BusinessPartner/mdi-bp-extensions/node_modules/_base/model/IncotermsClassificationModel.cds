namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context IncotermsClassificationModel {
  @BusConfign.Entity
  entity IncotermsClassification : BusConfigurationEntity {
    key incotermsClassificationCode               : String(3);
        to_IncotermsClassificationText            : Association to many IncotermsClassificationText
                                                      on to_IncotermsClassificationText.incotermsClassificationCode = incotermsClassificationCode;
        to_IncotermsClassificationTextDescription : Association to one IncotermsClassificationText
                                                      on  to_IncotermsClassificationTextDescription.incotermsClassificationCode = incotermsClassificationCode
                                                      and to_IncotermsClassificationTextDescription.languageCode                = SESSION_CONTEXT(
                                                        'LOCALE'
                                                      );
  }

  @BusConfign.Entity
  entity IncotermsClassificationText : BusConfigurationEntity {
    key incotermsClassificationCode            : String(3);
    key languageCode                           : LanguageTwoLetterISOCode;
        incotermsClassificationCodeDescription : String(40);
  }
};
