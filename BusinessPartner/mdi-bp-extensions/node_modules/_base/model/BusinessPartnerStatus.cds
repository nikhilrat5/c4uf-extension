namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context BusinessPartnerStatus {
    // extends abstract entity CodeList
    @BusConfign.Entity
    entity Status : BusConfigurationEntity {
        key code                     : String(2);
            to_StatusText            : Association to many StatusText
                                           on to_StatusText.code = code;
            to_StatusTextDescription : Association to one StatusText
                                           on  to_StatusTextDescription.code         = code
                                           and to_StatusTextDescription.languageCode = SESSION_CONTEXT(
                                               'LOCALE'
                                           );
    //and to_StatusTextDescription.languageCode = 'en';
    }

    @BusConfign.Entity
    entity StatusText : BusConfigurationEntity {
        key code         : String(2);
        key languageCode : LanguageTwoLetterISOCode;
            description  : String(20);

    }
}
