namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';


context BPRelationshipCategoryModel {
    @BusConfign.Entity
    entity BPRelationshipCategory : BusConfigurationEntity {
        key bpRelationshipCategory                   : CommonTypes.RelationshipCategory;
            to_BPRelationshipCategoryText            : Association to many BPRelationshipCategoryText
                                                           on to_BPRelationshipCategoryText.bpRelationshipCategory = bpRelationshipCategory;
            to_BPRelationshipCategoryTextDescription : Association to one BPRelationshipCategoryText
                                                           on  to_BPRelationshipCategoryTextDescription.bpRelationshipCategory = bpRelationshipCategory
                                                           //and to_BPRelationshipCategoryTextDescription.languageCode = SESSION_CONTEXT('LOCALE');
                                                           and to_BPRelationshipCategoryTextDescription.languageCode           = 'en';
    }

    @BusConfign.Entity
    entity BPRelationshipCategoryText : BusConfigurationEntity {
        key bpRelationshipCategory : CommonTypes.RelationshipCategory;
        key languageCode           : LanguageTwoLetterISOCode;
            description1           : String(50);
            description2           : String(50);
            objectPartTitle        : String(25);
    }
};
