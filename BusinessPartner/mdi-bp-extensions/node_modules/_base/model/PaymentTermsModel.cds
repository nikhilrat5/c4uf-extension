namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context PaymentTermsModel {
  @BusConfign.Entity
  entity PaymentTerms : BusConfigurationEntity {
    key paymentTermsCode               : CommonTypes.PaymentTermsCode;
        customerRelevant               : Boolean;
        supplierRelevant               : Boolean;

        to_PaymentTermsTextDescription : Association to one PaymentTermsText
                                           on  to_PaymentTermsTextDescription.paymentTermsCode = paymentTermsCode
                                           and to_PaymentTermsTextDescription.languageCode     = SESSION_CONTEXT(
                                             'LOCALE'
                                           );

        to_PaymentTermsText            : Association to many PaymentTermsText
                                           on to_PaymentTermsText.paymentTermsCode = paymentTermsCode;


  }

  @BusConfign.Entity
  entity PaymentTermsText : BusConfigurationEntity {

    key paymentTermsCode : CommonTypes.PaymentTermsCode;
        customerRelevant : Boolean;
        supplierRelevant : Boolean;
    key languageCode     : LanguageTwoLetterISOCode;
        shortDescription : String(50);

  }
};
