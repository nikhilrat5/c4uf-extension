namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context ContactPersonDepartmentModel {
  @BusConfign.Entity
  entity Department : BusConfigurationEntity {
    key ContactPersonDepartment      : String(4);

        to_DepartmentText            : Association to many DepartmentText
                                         on to_DepartmentText.ContactPersonDepartment = ContactPersonDepartment;

        to_DepartmentTextDescription : Association to one DepartmentText
                                         on  to_DepartmentTextDescription.ContactPersonDepartment = ContactPersonDepartment
                                         and to_DepartmentTextDescription.languageCode            = SESSION_CONTEXT(
                                           'LOCALE'
                                         );
  }

  @BusConfign.Entity
  entity DepartmentText : BusConfigurationEntity {
    key ContactPersonDepartment     : String(4);
    key languageCode                : LanguageTwoLetterISOCode;
        ContactPersonDepartmentName : String(20);
  }
};
