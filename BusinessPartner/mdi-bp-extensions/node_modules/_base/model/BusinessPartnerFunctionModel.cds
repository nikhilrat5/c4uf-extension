namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context BusinessPartnerFunctionModel {
  @BusConfign.Entity
  entity BusinessPartnerFunction : BusConfigurationEntity {
    key businessPartnerFunctionCode               : CommonTypes.BusinessPartnerFunctionCode;

        to_BusinessPartnerFunctionTextDescription : Association to one BusinessPartnerFunctionText
                                                      on  to_BusinessPartnerFunctionTextDescription.businessPartnerFunctionCode = businessPartnerFunctionCode
                                                      and to_BusinessPartnerFunctionTextDescription.languageCode                = SESSION_CONTEXT(
                                                        'LOCALE'
                                                      );

        to_BusinessPartnerFunctionText            : Association to many BusinessPartnerFunctionText
                                                      on to_BusinessPartnerFunctionText.businessPartnerFunctionCode = businessPartnerFunctionCode;


  }

  @BusConfign.Entity
  entity BusinessPartnerFunctionText : BusConfigurationEntity {
    key businessPartnerFunctionCode : CommonTypes.BusinessPartnerFunctionCode;
    key languageCode                : LanguageTwoLetterISOCode;
        shortDescription            : String(20);

  }
};
