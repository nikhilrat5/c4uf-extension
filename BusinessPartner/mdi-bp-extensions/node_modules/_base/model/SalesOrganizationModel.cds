namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context SalesOrganizationModel {
  @BusConfign.Entity
  entity SalesOrganization : BusConfigurationEntity {
    key salesOrganizationCode               : CommonTypes.SalesOrganizationCode;

        to_SalesOrganizationTextDescription : Association to one SalesOrganizationText
                                                on  to_SalesOrganizationTextDescription.salesOrganizationCode = salesOrganizationCode
                                                and to_SalesOrganizationTextDescription.languageCode          = SESSION_CONTEXT(
                                                  'LOCALE'
                                                );

        to_SalesOrganizationText            : Association to many SalesOrganizationText
                                                on to_SalesOrganizationText.salesOrganizationCode = salesOrganizationCode;


  }

  @BusConfign.Entity
  entity SalesOrganizationText : BusConfigurationEntity {
    key salesOrganizationCode : CommonTypes.SalesOrganizationCode;
    key languageCode          : LanguageTwoLetterISOCode;
        shortDescription      : String(20);

  }
};
