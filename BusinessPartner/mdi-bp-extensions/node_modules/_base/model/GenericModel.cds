namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context GenericModel {
  @BusConfign.Entity
  entity GenericDomainCodeList : BusConfigurationEntity {
    key domainName                              : localized String(30);
    key domainValueKey                          : localized String(4);
        codeValue                               : localized String(10);
        to_GenericDomainCodeListText            : Association to many GenericDomainCodeListText
                                                    on  to_GenericDomainCodeListText.domainName     = domainName
                                                    and to_GenericDomainCodeListText.domainValueKey = domainValueKey;

        to_GenericDomainCodeListTextDescription : Association to one GenericDomainCodeListText
                                                    on  to_GenericDomainCodeListTextDescription.domainName     = domainName
                                                    and to_GenericDomainCodeListTextDescription.domainValueKey = domainValueKey
                                                    and to_GenericDomainCodeListTextDescription.languageCode   = SESSION_CONTEXT(
                                                      'LOCALE'
                                                    );
  //and to_GenericDomainCodeListTextDescription.languageCode = 'en';

  }

  @BusConfign.Entity
  entity GenericDomainCodeListText : BusConfigurationEntity {
    key domainName     : localized String(30);
    key domainValueKey : localized String(4);
    key languageCode   : LanguageTwoLetterISOCode;
        codeValue      : localized String(10);
        text           : String(60);
  }
};
