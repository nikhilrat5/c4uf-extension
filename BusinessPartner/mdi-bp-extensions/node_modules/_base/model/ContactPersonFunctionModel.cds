namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';


context ContactPersonFunctionModel {
  @BusConfign.Entity
  entity Function : BusConfigurationEntity {
    key ContactPersonFunction      : String(4);

        to_FunctionText            : Association to many FunctionText
                                       on to_FunctionText.ContactPersonFunction = ContactPersonFunction;

        to_FunctionTextDescription : Association to one FunctionText
                                       on  to_FunctionTextDescription.ContactPersonFunction = ContactPersonFunction
                                       and to_FunctionTextDescription.languageCode          = SESSION_CONTEXT(
                                         'LOCALE'
                                       );
  }

  @BusConfign.Entity
  entity FunctionText : BusConfigurationEntity {
    key ContactPersonFunction     : String(4);
    key languageCode              : LanguageTwoLetterISOCode;
        ContactPersonFunctionName : String(30);
  }
};
