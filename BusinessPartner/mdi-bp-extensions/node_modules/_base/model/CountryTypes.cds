namespace com.sap.mdm.bp;

context CountryTypes {

    // TODO: we should decide which key will be the leading one (ISO/SAP)
    // - SAP country code equals the ISO code but contains custom values like "eu"
    // TODO: check if country2 & country3 can be merged to one type
    // guidance: define type as singular (Country), entity as plural (Countries)

    type Country : String(2)@(
        title        : 'Country Code',
        description  : 'A country code with 2 characters as specified in ISO 3166-1',
        Common.Label : '2-Digit ISO Country Code'
    );

    type Country3 : String(3)@(
        title        : 'Country Code',
        description  : 'A country code with 3 characters as specified in ISO 3166-1',
        Common.Label : '3-Digit ISO Country Code'
    );

    type CountryNumber : Integer @(
        title        : 'Country Number',
        description  : 'A numeric country code as specified in ISO 3166-1',
        Common.Label : 'ISO Country Number'
    );

    type CountrySAP : String(3)@(
        title        : 'Country Code (SAP)',
        description  : 'A country code as specified by SAP',
        Common.Label : 'SAP Country Code'
    );
}
