namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context BillingBlockModel {
  @BusConfign.Entity
  entity BillingBLock : BusConfigurationEntity {
    key billingBlockCode               : CommonTypes.BillingBlockCode;

        to_BillingBlockTextDescription : Association to one BillingBlockText
                                           on  to_BillingBlockTextDescription.billingBlockCode = billingBlockCode
                                           and to_BillingBlockTextDescription.languageCode     = SESSION_CONTEXT(
                                             'LOCALE'
                                           );

        to_BillingBlockText            : Association to many BillingBlockText
                                           on to_BillingBlockText.billingBlockCode = billingBlockCode;


  }

  @BusConfign.Entity
  entity BillingBlockText : BusConfigurationEntity {
    key billingBlockCode : CommonTypes.BillingBlockCode;
    key languageCode     : LanguageTwoLetterISOCode;
        shortDescription : String(20);

  }
};
