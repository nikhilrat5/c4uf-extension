namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';

context AcademicTitleModel {
  @BusConfign.Entity
  entity AcademicTitle : BusConfigurationEntity {
    key title                           : CommonTypes.AcademicTitleCode;
        titleText                       : localized String(20);
        to_AcademicTitleText            : Association to many AcademicTitleText
                                            on to_AcademicTitleText.title = title;
        to_AcademicTitleTextDescription : Association to one AcademicTitleText
                                            on  to_AcademicTitleTextDescription.title        = title
                                            and to_AcademicTitleTextDescription.languageCode = SESSION_CONTEXT(
                                              'LOCALE'
                                            );
  //and to_AcademicTitleTextDescription.languageCode = 'en';
  }

  @BusConfign.Entity
  entity AcademicTitleText : BusConfigurationEntity {
    key title        : CommonTypes.AcademicTitleCode;
    key languageCode : LanguageTwoLetterISOCode;
        description  : String(40);
  }
};
