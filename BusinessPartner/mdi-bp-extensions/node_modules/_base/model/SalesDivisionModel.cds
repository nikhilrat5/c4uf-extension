namespace com.sap.mdm.bp;

using com.sap.mdm.bp.CommonTypes as CommonTypes from './CommonTypes';
using cds.foundation.sap.busconfign.BusinessConfiguration as BusConfigurationEntity from '@sap/BusinessConfigurationModel';
using cds.foundation.sap.language.LanguageTwoLetterISOCode from '@sap/reusemodel-language/db/types';

context SalesDivisionModel {
  @BusConfign.Entity
  entity SalesDivision : BusConfigurationEntity {
    key salesDivisionCode               : CommonTypes.SalesDivisionCode;

        to_SalesDivisionTextDescription : Association to one SalesDivisionText
                                            on  to_SalesDivisionTextDescription.salesDivisionCode = salesDivisionCode
                                            and to_SalesDivisionTextDescription.languageCode      = SESSION_CONTEXT(
                                              'LOCALE'
                                            );

        to_SalesDivisionText            : Association to many SalesDivisionText
                                            on to_SalesDivisionText.salesDivisionCode = salesDivisionCode;


  }

  @BusConfign.Entity
  entity SalesDivisionText : BusConfigurationEntity {
    key salesDivisionCode : CommonTypes.SalesDivisionCode;
    key languageCode      : LanguageTwoLetterISOCode;
        shortDescription  : String(20);

  }
};
