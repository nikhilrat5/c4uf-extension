namespace cds.foundation.sap.currency;

using from '../db/data-model';

using cds.foundation.sap.language.C_LanguageValueHelp  as C_LanguageValueHelp from '@sap/reusemodel-language';

@BusConfign.ConfignPattern : 'Currency Service'
@BusConfign.ConfignPattern.Version : '1.0.0'
@BusConfign.ConfignPattern.Description : 'Currency Code List Service'
@BusConfign.Confign.Version : '1.0.0'
service Service{

	@BusConfign.Entity  : 'Currencies'
	@BusConfign.Entity.Required
	@BusConfign.Entity.CsvPath : 'CurrencyCodes.csv'
	entity Currencies as projection on currency.C_Currencies;
	
	entity CurrenciesValueHelp @readonly as projection on currency.C_CurrenciesValueHelp{
		key CurrencyThreeLetterISOCode,
		key CurrencyTextLanguageCode,
		CurrencyThreeDigitISOCode,
		CurrencyISOCodeName
	};
	
	@BusConfign.Entity  : 'CurrencyTexts'
	@BusConfign.Entity.Required
	@BusConfign.Entity.CsvPath : 'CurrencyCodeTexts.csv'
	entity CurrencyTexts as projection on currency.C_CurrencyTexts;
  		
	entity CurrenciesWithTexts as projection on currency.C_CurrenciesWithTexts;
	
	entity LanguageValueHelp @readonly as projection on C_LanguageValueHelp{
		key LanguageTwoLetterISOCode,
		LanguageName
	};

	action activateConfiguration(BusConfignVersion:Integer64) returns String;

}
