namespace cds.foundation.sap.language;

using from '../db/data-model';

@BusConfign.ConfignPattern : 'Language Service'
@BusConfign.ConfignPattern.Version : '1.0.0'
@BusConfign.ConfignPattern.Description : 'Language Code List Service'
@BusConfign.Confign.Version : '1.0.0'
service Service{
	@BusConfign.Entity  : 'Languages'
	@BusConfign.Entity.Required
	@BusConfign.Entity.CsvPath : 'LanguageCodes.csv'
	entity Languages as projection on language.C_Languages;
	
	@BusConfign.Entity  : 'LanguageTexts'
	@BusConfign.Entity.Required
	@BusConfign.Entity.CsvPath : 'LanguageCodeTexts.csv'
	entity LanguageTexts as projection on language.C_LanguageTexts;
	
	entity LanguagesWithTexts as projection on language.C_LanguagesWithTexts;
  
  	entity LanguageValueHelp @readonly as projection on language.C_LanguageValueHelp{
	      key LanguageTwoLetterISOCode,
	      key LanguageTextLanguageCode,
	      LanguageName
	};
	
	action activateConfiguration(BusConfignVersion:Integer64) returns String;
	
}
