namespace mdo;

using mdo.LanguageCode as LanguageCode from './common';

	entity ObjectIdentifierType {
		key identifierType		: String(12);
		objectTypeCode			: String(10);
		identifierName			: String(128);
		to_Description			: Composition of many ObjectIdentifierTypeText on to_Description.identifierType = $self;
		to_CurrentDescription	: Composition of one ObjectIdentifierTypeText on to_CurrentDescription.identifierType = $self and to_CurrentDescription.language = SUBSTRING(SESSION_CONTEXT('LOCALE'),1,2);																	
	};
	
	entity ObjectIdentifierTypeText {
		key identifierType	: association to ObjectIdentifierType;
		key language		: LanguageCode;
		description			: String(80);
	};