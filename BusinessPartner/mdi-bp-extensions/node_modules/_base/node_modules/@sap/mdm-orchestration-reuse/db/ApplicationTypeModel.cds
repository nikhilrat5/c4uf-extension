namespace mdo;

entity ApplicationType {
	key ApplicationTypeCode : String(10);
	Description				: Composition of many ApplicationTypeText on Description.ApplicationTypeCode = ApplicationTypeCode;
	LocalizedDescription	: Association[1] to ApplicationTypeText on LocalizedDescription.ApplicationTypeCode = ApplicationTypeCode and LocalizedDescription.Language = SUBSTRING(SESSION_CONTEXT('LOCALE'),1,2);
}

entity ApplicationTypeText {
	key ApplicationTypeCode : String(10);
	key Language			: String(2);
	Description			    : String(80);
}

@cds.persistence.skip: true
entity ConsumerApplicationType {
	key ApplicationTypeCode : String(10);
	Description             : String(256);
}