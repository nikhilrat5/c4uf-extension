namespace mdo;
using {  mdo.manageObjectTypeOwners,
         mdo.manageObjectTypeOwners.ObjectTypeOwners,
         mdo.manageObjectTypeOwners.ObjectTypes, 
         mdo.manageObjectTypeOwners.ConsumerDestinations,
         mdo.manageObjectTypeOwners.BusinessObjectTypes           
      } from '../srv/manageObjectTypeOwners';


annotate manageObjectTypeOwners with @(requires: 'authenticated-user');

annotate ObjectTypeOwners with @(restrict: [
    { grant: ['READ','WRITE','CREATE','DELETE'], to: 'MDOObjectTypeOwnerMaintain' },
    { grant: ['READ'], to: 'MDOObjectTypeOwnerDisplay' }
]);

annotate ConsumerDestinations with @(restrict: [ 
    { grant: ['READ'], to: 'MDOObjectTypeOwnerMaintain' },
    { grant: ['READ'], to: 'MDOObjectTypeOwnerDisplay' }
]);

annotate BusinessObjectTypes with @(restrict: [ 
    { grant: ['READ'], to: 'MDOObjectTypeOwnerMaintain' },
    { grant: ['READ'], to: 'MDOObjectTypeOwnerDisplay' }
]);