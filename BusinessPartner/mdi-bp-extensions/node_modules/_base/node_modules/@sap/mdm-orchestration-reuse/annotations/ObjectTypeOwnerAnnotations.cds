namespace mdo;

using mdo.manageObjectTypeOwners from '../srv/manageObjectTypeOwners';

annotate mdo.manageObjectTypeOwners.ObjectTypeOwners with {

	ObjectTypeCode
	@Common: {
		Text: {$value: To_BusinessObjectType.localizedDescription, ![@UI.TextArrangement]: #TextFirst},
		FieldControl: #Mandatory,
		ValueListWithFixedValues: true,
		ValueList: {
			CollectionPath: 'BusinessObjectTypes',
			Parameters: [
				{$Type: 'Common.ValueListParameterInOut', LocalDataProperty: 'ObjectTypeCode', ValueListProperty: 'objectTypeCode'}
			]
		}
	};

	ProviderDestination
	@Common: {
		FieldControl: #Mandatory,
		ValueListWithFixedValues: true,
		ValueList: {
			CollectionPath: 'ConsumerDestinations',
			Parameters: [
				{$Type: 'Common.ValueListParameterInOut', LocalDataProperty: 'ProviderDestination', ValueListProperty: 'Name'}
			]
		}
	};	

	IsLocalModel
	@Common.Label: '{i18n>isLocalModel}';
};

annotate mdo.manageObjectTypeOwners.ObjectTypeOwners with @(
	Common: {
		Label: '{i18n>objectTypeOwner}',
		SemanticKey: [ObjectTypeCode]
	},

	UI: {
		HeaderInfo: {
			TypeName: '{i18n>objectTypeOwner}',
			TypeNamePlural: '{i18n>objectTypeOwnerPlural}',
			Title: {Value: To_BusinessObjectType.localizedDescription, Label: '{i18n>objectTypeCode}'},
			Description: {Value: To_BusinessObjectType.objectTypeCode}
		},

		Facets: [
			{$Type: 'UI.ReferenceFacet', Target: '@UI.FieldGroup#mainData'}
		],

		SelectionFields: [ObjectTypeCode, ProviderDestination],
		LineItem: [
			{$Type: 'UI.DataField', Value: ObjectTypeCode, Label: '{i18n>objectTypeCode}', ![@UI.Importance]: #High},
			{$Type: 'UI.DataField', Value: ProviderDestination, Label: '{i18n>providerDestination}', ![@UI.Importance]: #High}
		],

		FieldGroup#mainData: {
			Data: [
				{$Type: 'UI.DataField', Value: ObjectTypeCode, Label: '{i18n>objectTypeCode}'},
				{$Type: 'UI.DataField', Value: ProviderDestination, Label: '{i18n>providerDestination}'}
			]
		}
	}
);

annotate mdo.manageObjectTypeOwners.ObjectTypes with {

	objectTypeCode @(
		UI.HiddenFilter: true,
		Common: {
			Text: {$value: localizedDescription, ![@UI.TextArrangement]: #TextFirst}
		}
	);

	BusConfignVersion @(
		UI.HiddenFilter: true
	);

	businessObject @(
		UI.HiddenFilter: true
	);

	isProjection @(
		UI.HiddenFilter: true
	);

	mainObject @(
		UI.HiddenFilter: true
	);

	localizedDescription @(
		UI.HiddenFilter: true
	);
};

annotate mdo.manageObjectTypeOwners.BusinessObjectTypes with {

	objectTypeCode @(
		UI.HiddenFilter: true,
		Common: {
			Text: {$value: Description, ![@UI.TextArrangement]: #TextFirst}
		}
	);
};
